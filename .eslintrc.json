{
  "root": true,
  "extends": ["smooth", "smooth/project", "smooth/react"],
  "rules": {
    "no-underscore-dangle": [
      "error",
      {
        "allow": [
          "__SMOOTH_ERROR__",
          "__APOLLO_STATE__",
          "__schema",
          "__smooth_pages",
          "__smooth_blocks"
        ]
      }
    ],
    "import/no-unresolved": [
      "error",
      {
        "ignore": ["__smooth"]
      }
    ]
  }
}
